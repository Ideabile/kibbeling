{
  "name": "kibbeling",
  "version": "1.0.0",
  "description": "Markdown as a Service",
  "main": "dist/index.js",
  "bin": {
    "kib": "./.bin/kibbeling"
  },
  "nyc": {
    "lines": 10,
    "statements": 10,
    "functions": 5,
    "branches": 5
  },
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist && rimraf bin",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:cli": "webpack --entry ./cli.js --output-filename kibbeling.cli.js",
    "build:lib": "webpack --output-filename index.umd.min.js -p",
    "postbuild": "npm-run-all pkg",
    "pkg": "pkg -o ./bin/kibbeling ./dist/kibbeling.cli.js",
    "lint": "eslint src",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "watch:test": "mocha --watch",
    "validate": "npm-run-all --parallel lint test build",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Mauro Mandracchia <info@ideabile.com>",
  "license": "MIT",
  "dependencies": {
    "front-matter": "^2.1.2",
    "fs-extra": "^4.0.0",
    "hapi": "^16.5.0",
    "markdown-it": "^8.3.1",
    "markdown-it-highlightjs": "^3.0.0",
    "markdown-it-video": "^0.4.0",
    "markdown-it-video-ext": "^0.1.3",
    "marked": "^0.3.6",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.3.0",
    "ghooks": "^2.0.0",
    "json-loader": "^0.5.7",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.3",
    "pkg": "^4.1.3",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.13.1",
    "webpack": "^3.4.1"
  }
}
